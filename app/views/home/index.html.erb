<h1>Home</h1>

<ul>
  <% @users.each do |user| %>
    <li><%= user.username %>
       <%= link_to image_tag("star.png"), {:upvote => user.id} %>
       <span class="vote-number"><%= user.get_likes.size %></span>
       <%= link_to "Text now!", user_path(user)  %>
    </li>

  <% end %>

</ul>

  <%= form_tag home_index_path do%>
    <%= label_tag :zip %>
    <%= text_field_tag :zip %>
    <%= submit_tag %>
  <% end %>

<!-- WEATHER humidity runs get humidity -->
<% if @weather %>
  <h3>Humidity<%= @zip %>: <%= @weather["main"]["humidity"] %></h3>
  <h3>Temperature<%= @zip %>: <%= @weather["main"]["temp"] %></h3>
  <h3>Temperature<%= @zip %>: <%= @weather%></h3>
<% end %>
